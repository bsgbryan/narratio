body
  background-color #D7DBE0
  text-rendering optimizeLegibility

#title
#content
  display none


#post
#preview
  box-sizing border-box
  position relative
  background-color #47423B
  border-left  5px solid #E8E8DC
  border-right 5px solid #E8E8DC

#post
#preview
  z-index 100
  width  100%
  height 100%
#post.read
#preview
  padding 1%

#back
  absolute top .75% left 13.5%
  width 7.5%
  z-index 110
  box-shadow 0 1px 1px black
  background-color #47423B
  border none
  text-shadow 0 -1px 0 black
  color #7A756E

#share
  width 12.5%
  margin  0
  padding 0
  fixed bottom, left
  background-color #E3DFD6
  box-shadow 0 0 5px black
  a
    display block
    width 80%
    padding .25em 10%
    background-color transparent
    color #807980
    letter-spacing 1px
    border-top    1px solid white
    border-bottom 1px solid rgba(black, .125)
    font-family 'Alegreya SC', serif
    font-weight bold

#posts
  fixed top, left
  bottom 5.625em
  width 12.5%
  background-color rgba(black, .25)
  a
    display block
    padding .25em 5%
    width 90%
    text-shadow 0 1px 0 rgba(white, .25)
    color #502620
    background-color #825952
    border-top    1px solid rgba(white, .125)
    border-bottom 1px solid rgba(black, .125)
    font-family 'Special Elite', sans-serif
    &:last-child
      box-shadow 0 1px 3px black

#aioim
  background-color #47423B
  box-shadow inset 0 1px 2px rgba(black, .5), 0 1px 1px rgba(white, .75)
  position fixed
  bottom .5em
  right  .5em
  width  23em
  height 70%
  border-radius 4px
  & > p
    text-align center
  & > .new.message
    absolute bottom, right
    width 100%
    height 2.85em
    background-color #3D4C5A
    border-bottom-left-radius  4px
    border-bottom-right-radius 4px
    textarea
      absolute bottom, left
      border none
      width 85%
      box-sizing border-box
      padding .1em .5em
      background linear-gradient(top, #5D7067, #4C6056)
      border-top 1px solid #5f6e7c
      text-shadow 0 1px 0 rgba(black, .25)
      color rgba(white, .6)
      font-family 'Esteban'
      letter-spacing 1px
      border-bottom-left-radius  4px
      &::-webkit-input-placeholder
        color rgba(white, .25)
        text-shadow 0 -1px 0 rgba(black, .25)
      &:-moz-placeholder
        color rgba(white, .25)
        text-shadow 0 -1px 0 rgba(black, .25)
    button
      absolute bottom, right
      border none
      width 15%
      box-sizing border-box
      height 2.85em
      background linear-gradient(top, #749AA1, #638990)
      border-top 1px solid #85ABB2
      color black
      text-shadow 0 1px 0 rgba(white, .125)
      font-family 'Alegreya SC'
      border-bottom-right-radius 4px
  .messages
    margin-left  1em
    margin-right 1em
    dt 
      background-color #5D7067
      display inline-block
      width 100%
      box-shadow 0 -1px 1px rgba(black, .3)
      padding 0 .5em
      box-sizing border-box
      border-bottom 1px solid rgba(black, .125)
      border-top-left-radius  2px
      border-top-right-radius 2px
      a
        display inline-block
      .user
        color #222
        text-decoration none
        text-shadow 0 1px 0 rgba(white, .125)
        font-size 80%
        width 22.25em
        line-height 100%
        font-family 'Special Elite'
        letter-spacing 1px
        vertical-align bottom
        margin-bottom .5em
      &:hover
        .favorite
        .retweet
          visibility visible
          text-shadow 0 1px 0 rgba(white, .1)
      .favorite
      .retweet
        &:hover
          color black
          text-shadow 0 1px 0 rgba(white, .25)
        visibility hidden
        color rgba(black, .25)
        width .5em
        text-decoration none
        background-position-y -1px
        font-family 'EntypoRegular'
        font-size 1.75em
        line-height 1em
        vertical-align top
      .favorited
      .retweeted
        visibility visible
      .favorite
        background-position-x 95px
        &:hover
          background-position-x 79px
      .retweet
        background-position-x 48px
        margin-right .25em
        &:hover
          background-position-x 32px
      .favorited
        background-position-x 63px
      .retweeted
        background-position-x 16px
    .message
      background linear-gradient(top, #5D7067, #4C6056)
      margin 0
      display inline-block
      width 100%
      box-shadow 0 1px 1px rgba(white, .25)
      margin-bottom 1em
      padding .25em .5em
      box-sizing border-box
      border-top 1px solid rgba(white, .15)
      border-bottom-left-radius  2px
      border-bottom-right-radius 2px
      .content
        margin 0
        color rgba(white, .6)
        text-shadow 0 1px 0 rgba(black, .25)
        font-size 75%
        letter-spacing 1px
        font-family 'Esteban'

div#post
#preview
  box-shadow inset 0 0 3px black, 0 0 5px black

  h1, h2, h3
    font-family 'Special Elite', sans-serif
    color rgba(white, .7)

  h2, h3
    text-shadow 0 1px 0 rgba(black, .5)

  h1
    text-align center
    font-size 4em
    line-height 1.1
    text-shadow 0 1px 2px rgba(black, .25)

  h2
    margin-top 2em

  h3
    letter-spacing 1px
    margin-top    1.5em
    margin-left   1em
    margin-bottom 0
    & + p
      margin-top .5em

  h4
    font-family monospace
    color white
    margin-top  2.5em
    margin-left 1.25em
    text-shadow 0 -1px 0 #606060
    margin-bottom 0em

  pre
    padding .5em 1em
    margin-top    .25em
    margin-bottom 3.5em
    font-family monospace
    background linear-gradient(top, rgba(white, .925) 0%, rgba(#efefef, .925) 100%), url('http://www.unsigneddesign.com/Experimental%20Dirty/3.jpg')
    text-shadow 0 1px 0 white
    box-short-slab()
    color black

  p, ol, ul, pre
    width 28.4em

  img
    width 28.375em

  p, ol, ul
    font-family 'Esteban', serif

  ol, ul
    color #666
    margin 1.75em 0

  p
    padding .85em .75em .45em .75em
    text-shadow 0 1px 0   rgba(black, .25)
    box-shadow  0 -1px 1px rgba(black, .3), 0 1px 1px rgba(white, .25)
    letter-spacing 1px
    background linear-gradient(top, #4F6E96, #3e5d85)
    color rgba(white, .7)
    border-radius 2px
    &:first-letter
      font-size 2em
      letter-spacing 1px
    &:first-line
      line-height: 1.3em
    img
      box-sizing border-box
      width 100%
      box-shadow 0 1px 3px black
      margin-top -.5em
      border 2px solid #E3DFD6

  a
    color #0B2A52
    text-decoration none
    &:visited
      color #0B2A52

  ol, ul
    text-shadow 0 1px 0 white
    padding .5em 2.25em
    box-medium-slab()

  ol
    list-style-type lower-roman

.hidden
  display: none !important

#post.write
  absolute top, left
  margin 0
  box-shadow inset 0 0 5px black, 0 0 5px black
  overflow hidden
  .content
  input:focus
  textarea:focus
    outline none
  input
    text-align center
    padding .5em 0
    border none
  .preview
  .done
    width: 20%
    background-color #E8D1C0
    color black
    text-shadow 0 1px 0 rgba(white, .75)
    box-shadow  0 1px 3px black
  .preview
    absolute top 0 left 0
  .done
    absolute top 0 right 0
  .title
    background-color transparent
    absolute top -.325em left 20%
    right 20%
    font-family 'Special Elite', sans-serif
    text-shadow 0 1px 3px black
    color #E3DFD6
    font-size   1.85em
    line-height 1em
  .content
    text-shadow 0 1px 0 rgba(white, .25)
    box-shadow 0 1px 3px black
    background-color #4F6E96
    margin 2%
    padding .5em 1em
    absolute top 2.15em left 0
    right  0
    bottom 0
    border none

@media screen and (max-width: 640px)
  #post.read
  #post.write
  #preview
    padding 2%
    height 100%
  h1
    margin-top    0
    margin-bottom 0

@media screen and (min-width: 800px)
  #post.write
  #post.read
  #preview
    width 75%

@media screen and (min-width: 1024px)
  #post.write
  #post.read
  #preview
    absolute left 8em right 24em
    width auto
    overflow-y auto
  h1
    margin-top .4em
    line-height 1.4
