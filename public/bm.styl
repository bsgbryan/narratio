html, body
  width  100%
  height 100%

body
  background linear-gradient(left, rgba(black, .5), transparent 25%, rgba(black, .5))
  text-rendering optimizeLegibility
  &:before
    display block
    content ' '
    position fixed
    top    0
    left   0
    right  0
    bottom 0
    background linear-gradient(top, transparent, rgba(black, .35))

#title
#content
  display none


#post
  box-sizing border-box
  position fixed
  background linear-gradient(top, #36312A, #252019, #141008)
  background-repeat repeat 
  background-size .25em
  border-left  5px solid #E8E8DC
  border-right 5px solid #E8E8DC
  z-index 100
  width  100%
  height 100%
  padding 1%
  .edit.content
    font-family 'EntypoRegular'
    width 1em
    display block
    margin 0 auto
    font-size 3em
    line-height .05em
    text-align center
    padding-right 0
    padding-left 8.75em
    margin-top -.3em
    margin-bottom .25em
    visibility hidden
    text-shadow 0 1px 3px black
  h1 .edit.content
    padding-left 8.45em
    font-size .8em
    line-height .25em
    margin-top -.95em
    margin-bottom 1.25em
  h2 .edit.content
    padding-left 9em
    font-size 2em
  h3 .edit.content
    padding-left 8em
    font-size 2.75em
    margin-bottom .4em
  
  .content.editor
    margin-top 1em
    margin-bottom 1em
  &:before
    display block
    content ' '
    background-color #47423B
    position fixed
    top -1em
    left 8.25em
    margin-left  auto
    margin-right auto
    right 24.25em
    width 31.5em
    z-index -1
    height 150%
    box-shadow inset 0 0 5px rgba(white, .25)
  ul.supplemental
    position fixed
    top 0
    left 8em
    right 24em
    list-style none
    overflow hidden
    background transparent
    box-shadow none
    margin 0
    width auto
    padding 0
    z-index -2
    li
      padding 1em
      img
        width 175px
        box-shadow 0 1px 5px black
        -webkit-filter grayscale(.5) sepia(.7)
        margin-left .25em
        border-radius 2px
        opacity .3
        &:hover
          opacity 1
    &:after
      display block
      content ' '
      position fixed
      top   0
      left  8em
      right 24em
      height 100%
      background linear-gradient(left, rgba(black, .5), transparent 15%, transparent 85%, rgba(black, .5))
      z-index -1
    &:before
      background linear-gradient(top, transparent 25%, rgba(black, .5))
      display block
      content ' '
      position fixed
      top   0
      left  8em
      right 24em
      height 100%
      border-left 5px solid #E8E8DC
      border-right 5px solid #E8E8DC

#back
  absolute top .75% left 13.5%
  width 7.5%
  z-index 110
  box-shadow 0 1px 1px black
  background-color #47423B
  border none
  text-shadow 0 -1px 0 black
  color #7A756E

#share
  width 12.5%
  margin  0
  padding 0
  fixed bottom, left
  background-color #E3DFD6
  box-shadow 0 0 5px black
  a
    display block
    width 80%
    padding .25em 10%
    background-color transparent
    color #807980
    letter-spacing 1px
    border-top    1px solid white
    border-bottom 1px solid rgba(black, .125)
    font-family 'Alegreya SC', serif
    font-weight bold

#posts
  fixed top, left
  bottom 5.625em
  width 12.5%
  background-color rgba(black, .25)
  a
    display block
    padding .25em 5%
    width 90%
    text-shadow 0 1px 0 rgba(white, .25)
    color #502620
    background-color #825952
    border-top    1px solid rgba(white, .125)
    border-bottom 1px solid rgba(black, .125)
    font-family 'Special Elite', sans-serif
    &:last-child
      box-shadow 0 1px 3px black

#aioim
  background-color #47423B
  box-shadow inset 1px 1px 2px rgba(black, .5), 1px 1px 1px rgba(white, .25), -1px -1px 2px rgba(black, .45)
  position fixed
  bottom .5em
  right  .5em
  width  23em
  height 70%
  border-radius 4px
  & > p
    text-align center
    font-family 'Esteban', serif
    color rgba(white, .8)
    text-shadow 0 -1px 0 rgba(black, .25)
    a
      color white
      text-decoration none
  & > .new.message
    absolute bottom, right
    width 100%
    height 2.85em
    background-color #3D4C5A
    border-bottom-left-radius  4px
    border-bottom-right-radius 4px
    textarea
      absolute bottom, left
      border none
      width 85%
      box-sizing border-box
      padding .1em .5em
      background linear-gradient(top, #5D7067, #4C6056)
      border-top 1px solid #5f6e7c
      text-shadow 0 1px 0 rgba(black, .25)
      color rgba(white, .6)
      font-family 'Esteban'
      letter-spacing 1px
      border-bottom-left-radius  4px
      &::-webkit-input-placeholder
        color rgba(white, .25)
        text-shadow 0 -1px 0 rgba(black, .25)
      &:-moz-placeholder
        color rgba(white, .25)
        text-shadow 0 -1px 0 rgba(black, .25)
    button
      absolute bottom, right
      border none
      width 15%
      box-sizing border-box
      height 2.85em
      background linear-gradient(top, #749AA1, #638990)
      border-top 1px solid #85ABB2
      color black
      text-shadow 0 1px 0 rgba(white, .125)
      font-family 'Alegreya SC'
      border-bottom-right-radius 4px
  .messages
    margin-left  1em
    margin-right 1em
    dt 
      background-color #5D7067
      display inline-block
      width 100%
      box-shadow 0 -1px 1px rgba(black, .3)
      padding 0 .5em
      box-sizing border-box
      border-bottom 1px solid rgba(black, .125)
      border-top-left-radius  2px
      border-top-right-radius 2px
      a
        display inline-block
      .user
        color #222
        text-decoration none
        text-shadow 0 1px 0 rgba(white, .125)
        font-size 80%
        width 22.25em
        line-height 100%
        font-family 'Special Elite'
        letter-spacing 1px
        vertical-align bottom
        margin-bottom .5em
      &:hover
        .favorite
        .retweet
          visibility visible
          text-shadow 0 1px 0 rgba(white, .1)
      .favorite
      .retweet
        &:hover
          color black
          text-shadow 0 1px 0 rgba(white, .25)
        visibility hidden
        color rgba(black, .25)
        width .5em
        text-decoration none
        background-position-y -1px
        font-family 'EntypoRegular'
        font-size 1.75em
        line-height 1em
        vertical-align top
      .favorited
      .retweeted
        visibility visible
      .favorite
        background-position-x 95px
        &:hover
          background-position-x 79px
      .retweet
        background-position-x 48px
        margin-right .25em
        &:hover
          background-position-x 32px
      .favorited
        background-position-x 63px
      .retweeted
        background-position-x 16px
    .message
      background linear-gradient(top, #5D7067, #4C6056)
      margin 0
      display inline-block
      width 100%
      box-shadow 0 1px 1px rgba(white, .25)
      margin-bottom 1em
      padding .25em .5em
      box-sizing border-box
      border-top 1px solid rgba(white, .15)
      border-bottom-left-radius  2px
      border-bottom-right-radius 2px
      .content
        margin 0
        color rgba(white, .6)
        text-shadow 0 1px 0 rgba(black, .25)
        font-size 75%
        letter-spacing 1px
        font-family 'Esteban'

#post
