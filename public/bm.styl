@media screen and (max-width: 640px)
  #post
    padding 2%
    height 100%
  h1
    margin-top    0
    margin-bottom 0

@media screen and (min-width: 1024px)
  #post
    position fixed
    left 8em
    right 24em
    width auto
    overflow-y auto
  h1
    margin-top .4em
    line-height 1.4
@media screen and (min-width: 1029px)
  #post
    &:before
      box-shadow inset 0 0 5px rgba(white, .25), 0 0 5px black
