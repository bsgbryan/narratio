// box-short-slab()
//   box-shadow 0 1px 0 rgba(#ccc, .6), 0 2px 0 rgba(#c9c9c9, .6), 0 3px 1px rgba(black,.2), 0 4px 3px rgba(black, .2), 0 5px 5px rgba(black, .4)

body
  background-color #825952

#title
#content
  display none


#post
#preview
  box-sizing border-box
  position relative
  background-color #47423B
  border-left  5px solid #E8D1C0
  border-right 5px solid #E8D1C0

#post
#preview
  width  100%
  height 98%
#post.write
  absolute top, left
  height 95%
  margin 2.5%
#post.read
#preview
  padding 1%

#back
  absolute top 2.5% left 2.5%
  width 7.5%

div#post
#preview
  box-shadow inset 0 0 3px black, 0 0 5px black

h1, h2, h3
  font-family 'Ubuntu', sans-serif
  color #E3DFD6

h2, h3
  text-shadow 0 1px 2px black

h1
  text-align center
  font-size 4em
  text-shadow 0 1px 5px black
  line-height 1.1

h2
  margin-top 2em

h3
  letter-spacing 1px
  margin-top    1.5em
  margin-left   1em
  margin-bottom 0
  & + p
    margin-top .5em

h4
  font-family monospace
  color white
  margin-top  2.5em
  margin-left 1.25em
  text-shadow 0 -1px 0 #606060
  margin-bottom 0em

pre
  padding .5em 1em
  margin-top    .25em
  margin-bottom 3.5em
  font-family monospace
  background linear-gradient(top, rgba(white, .925) 0%, rgba(#efefef, .925) 100%), url('http://www.unsigneddesign.com/Experimental%20Dirty/3.jpg')
  text-shadow 0 1px 0 white
  box-short-slab()
  color black

p, ol, ul
  font-family 'Esteban', serif

ol, ul
  color #666
  margin 1.75em 0

p
  padding .85em .75em .45em .75em
  text-shadow 0 1px 0   rgba(white, .25)
  box-shadow  0 1px 3px black
  letter-spacing 1px
  background-color #4F6E96
  color black
  &:first-letter
    font-size 2em
    letter-spacing 1px
  &:first-line
    line-height: 1.3em
  img
    box-sizing border-box
    width 100%
    box-shadow 0 1px 3px black
    margin-top -.5em
    border 2px solid #E3DFD6

a
  color #0B2A52
  text-decoration none
  &:visited
    color #0B2A52

ol, ul
  background linear-gradient(top, rgba(white, .975), rgba(#efefef, .975)), url('http://www.shaderfarm.com/images/concrete-plate-0006-bump-l.jpg')
  text-shadow 0 1px 0 white
  padding .5em 2.25em
  box-medium-slab()

ol
  list-style-type lower-roman

.hidden
  display: none !important

#post.write
  margin 0
  box-shadow inset 0 0 5px black
  overflow hidden
  .content
  input:focus
  textarea:focus
    outline none
  input
    text-align center
    padding .5em 0
    border none
  .preview
  .done
    width: 20%
    background-color #E8D1C0
    color black
    text-shadow 0 1px 0 rgba(white, .75)
    box-shadow  0 1px 3px black
  .preview
    absolute top 0 left 0
  .done
    absolute top 0 right 0
  .title
    background-color transparent
    absolute top -.325em left 20%
    right 20%
    font-family 'Ubuntu', sans-serif
    text-shadow 0 1px 3px black
    color #E3DFD6
    font-size   1.85em
    line-height 1em
  .content
    text-shadow 0 1px 0 rgba(white, .25)
    box-shadow 0 1px 3px black
    background-color #4F6E96
    margin 2%
    padding .5em 1em
    absolute top 2.15em left 0
    right  0
    bottom 0
    border none

@media screen and (max-width: 640px)
  #post.read
  #post.write
  #preview
    padding 2%
    height 100%
  h1
    margin-top    0
    margin-bottom 0

@media screen and (min-width: 800px)
  #post.write
  #post.read
  #preview
    width 75%

@media screen and (min-width: 1024px)
  #post.write
  #post.read
  #preview
    width 50%
    margin-left 12.5%
  h1
  margin-top    .125em
  margin-bottom .75em
  line-height 1.4
